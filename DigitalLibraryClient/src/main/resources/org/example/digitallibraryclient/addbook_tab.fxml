<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="10.0" styleClass="custom-vbox" stylesheets="@utils/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.digitallibraryclient.controller.MainController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

<Label style="-fx-font-size: 18px;" styleClass="custom-label" stylesheets="@utils/styles.css" text="Add Book" textFill="#f2e9e9" />

<TextField fx:id="idField" promptText="Enter ID" styleClass="custom-textfield" stylesheets="@utils/styles.css" />
<TextField fx:id="nameField" promptText="Enter Name of the Book" styleClass="custom-textfield" stylesheets="@utils/styles.css" />
<TextField fx:id="authorField" promptText="Enter Author" styleClass="custom-textfield" stylesheets="@utils/styles.css" />
<TextField fx:id="genreField" promptText="Enter Genre" styleClass="custom-textfield" stylesheets="@utils/styles.css" />
<TextField fx:id="amountField" promptText="Enter Amount" styleClass="custom-textfield" stylesheets="@utils/styles.css" />
<TextField fx:id="priceField" promptText="Enter Price" styleClass="custom-textfield" stylesheets="@utils/styles.css" />

<Button onAction="#addBook" styleClass="default-button" text="Add" />
</VBox>
